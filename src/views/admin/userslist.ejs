<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/admin/userlistshow.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</head>
<body>
    <header class="admin-header" style="background-color: lightblue; color:black">
        <div class="admin-logo">
          <img src="/images/admin/logo.png" alt="Admin Logo">
        </div>
        <nav class="admin-nav" style="color:black;">
          <ul>
            <li><a href="/adminhome">Home</a></li>
            <li><a href="#">Dashboard</a></li>
            <li><a href="#">Settings</a></li>
            <li><a href="#">Logout</a></li>
          </ul>
        </nav>
    </header>
    <h1>User List</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Phone Number</th> <!-- Added "Phone Number" column -->
                <th>Delete</th> <!-- Added column for delete button/icon -->
            </tr>
        </thead>
        <tbody>
            <% var i = 0 %>
            <% users.forEach(function(user) { %>
            <tr>
                <%  i++ %>
                <td><%= i %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td><%= user.phone %></td> <!-- Added "Phone Number" cell -->
                <td>
                    <!-- Delete button/icon -->
                    <button onclick="deleteuser('<%= user._id %>')">Delete</button>
                    <!-- You can replace the button with an icon if desired -->
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
    
    <!-- JavaScript function to handle user deletion -->
  <script src="/script/deleteuser.js"></script>
</body>
</html>
